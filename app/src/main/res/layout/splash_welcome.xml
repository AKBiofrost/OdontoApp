<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/wallpaper"
        >

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/SplashScreen"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="21dp"
            android:layout_marginTop="31dp"
            android:layout_marginEnd="21dp"
            android:layout_marginBottom="31dp"
            android:background="@drawable/app_wallpaper"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <ImageView
                android:id="@+id/LogotipoApp"
                android:layout_width="181dp"
                android:layout_height="180dp"
                android:layout_marginTop="123dp"
                android:layout_marginBottom="69dp"
                android:foregroundGravity="center"
                app:layout_constraintBottom_toTopOf="@+id/NombreApp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/icono_logo"
                tools:ignore="MissingConstraints" />

        <TextView
                android:id="@+id/NombreApp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="369dp"
                android:layout_marginBottom="105dp"
                android:shadowColor="@color/SombraMorada"
                android:text="OdontoApp"
                android:textColor="@color/texto"
                android:textSize="@android:dimen/app_icon_size"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/progressBar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="InvalidId,UnknownId" />

        <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="138dp"
                android:layout_height="0dp"
                android:layout_marginBottom="108dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/NombreApp"
                tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>